<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BrigadeManager.UI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BrigadeManager.UI"
    xmlns:pages="clr-namespace:BrigadeManager.UI.Pages"
    Title="BrigadeManager.UI">

    <ShellContent
        Title="Home"
        Icon="home.png"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent 
        Title="Brigades list" 
        Icon="apps.png"
        ContentTemplate="{DataTemplate pages:Brigades}" 
        Route="Cources" />

</Shell>
